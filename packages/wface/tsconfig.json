{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "esnext"
    ],
    "types": ["reflect-metadata"],
    "importHelpers": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true // Bu geçisi olarak açılmıştır. Bağımlı kütüphanelerde hata yoksa açılmalıdır.
  },
  "include": [
    "./index.tsx",
    "./src/**/*"
  ]
}