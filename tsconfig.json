{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "declaration": true,
    "jsx": "react",
    "skipLibCheck": true,

    /* START: Compiler options */
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    // "noImplicitThis": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    // "noUnusedLocals": true,
    /* END: Compiler options */

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
