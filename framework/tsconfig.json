{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals":true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./packages",
    "paths": {
      "@quramy/*": ["./*/src"]
    }
  },  
  "exclude": [
    "./packages/lab"
  ]
}
