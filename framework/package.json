{
	"name": "wface-workspace",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"concurrently": "^3.5.1",
		"lerna": "^2.11.0"
	},
	"repository": {
		"type": "git",
		"url": "https://bitbucket.digiturk.com.tr/scm/itdev/wface.git"
	},
	"scripts": {
		"start": "concurrently --kill-others \"npm run start-client\" \"npm run start-server\"",
		"start-client": "npm --prefix ./packages/client-app start",
		"start-server": "cd ./packages/server-app && dotnet run",
		"start_old": "concurrently --kill-others \"npm run tsc:ioc\" \"npm run tsc:cmp\" \"npm run tsc:cnt\" \"npm run tsc:str\" \"npm run tsc:sys\" \"npm run web\"",
		"tsc:ioc": "tsc -w -p ./packages/ioc",
		"tsc:cmp": "tsc -w -p ./packages/components",
		"tsc:cnt": "tsc -w -p ./packages/container",
		"tsc:str": "tsc -w -p ./packages/store",
		"tsc:sys": "tsc -w -p ./packages/system"
	}
}
